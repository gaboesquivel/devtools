{
  "private": true,
  "version": "0.0.0",
  "name": "@kevinwolf/devtools",
  "homepage": "https://github.com/kevinwolfcr/devtools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "validate": "echo 'project validation disabled'"
  },
  "dependencies": {},
  "devDependencies": {
    "all-contributors-cli": "^6.1.2",
    "doctoc": "^1.4.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".all-contributorsrc": [
      "yarn contributors:generate"
    ],
    "**/*.md": [
      "doctoc",
      "prettier --write",
      "git add"
    ]
  }
}
